@model IEnumerable<Client.Models.Cart>

@{
    ViewData["Title"] = "ShowCart";
}

<h1 class="display-4">ShowCart</h1>

<div class="d-flex">
    @if (Model != null && Model.Any())
    {
        <a class="btn btn-primary mx-2" asp-action="Index" asp-controller="Order">Place Order</a>
    }
    <a class="btn btn-secondary mx-2" asp-action="Index" asp-controller="Product">List Product</a>
    <a class="btn btn-success mx-2" asp-action="ListOrder" asp-controller="Order">List 0rder</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteCart" asp-route-cartId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
